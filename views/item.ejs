<!-- Basic skeleton generated by Emmet Abbreviation "!" in VS Code -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stuff Inventory</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">


    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">
    
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>

<body>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section flow-text" id="stuffDetail">
            <h1>Item Information</h1>
            <a class="btn-small waves-effect waves-light" href="/stuff">
                <i class="material-icons left">arrow_back</i>Return
            </a>


            <table>
                <tr>
                    <th>Item</th>
                    <td><%= item %></td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>$<%= price %></td>

                </tr>
                <tr>
                    <th>Type</th>
                    <td><%= type %></td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td><%= description %></td>
                </tr>
            </table>
        </div>

        <div class="section" id="stuffControls">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="#stuffEdit">
                <i class="material-icons">edit</i>
                
            </a>
            <a class="btn-large waves-effect waves-light red right"  href="/stuff/item/<%= id %>/delete">
                <i class="material-icons">delete</i>
            </a>
            
        </div>


        <div class="modal" id="stuffEdit">

            <div class="modal-content">

                <h2>Edit Item</h2>
                <form method="post" action="/stuff/item/<%= id%>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="nameInput">Item Name</label>
                            <input type="text" name="name" id="nameInput" class="validate" data-length="32" value="<%= item%>" required>
                        </div>
                        <div class="input-field col s6">
                            <label for="typeInput">Type</label>
                            <input type="text" name="type" id="typeInput" value="<%= type%>">
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="input-field col s4">
                            <label for="priceInput">Price</label>
                            <input type="number" name="price" id="priceInput" value=<%= price%> required>
                        </div>
                        <div class="input-field col s8">
                            <label for="descriptionInput">Description</label>
                            <input type="text" name="description" id="descriptionInput" data-length="100" value="<%= description%>">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="modal-close waves-effect waves-green btn-flat">Never Mind</button>
                        <button class="btn waves-effect waves-light " type="submit">
                            Submit
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script src="/scripts/m.autoinit.js"></script>

</body>

</html>