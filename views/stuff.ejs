<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spending</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">


    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script src="/scripts/materializeAutoinit.js"></script>

    <link rel="stylesheet" href="/stylesheets/stuffStyle.css">

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>

<body>
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo">Stuff Manager</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
                    <li><a href="/stuff"><i class="material-icons left">list</i>Inventory</a></li>
                    <% if (isLoggedIn) { %>
                        <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                        <li><a href="/logout" class="btn red">Logout</a></li>                        
                    <% } else { %>
                        <li><a href="/login" class="btn blue">Login</a></li>
                    <% } %>
                </ul>
            </div>
        </nav>
        <ul id="mobile-nav" class="sidenav">
             <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
             <li><a href="/stuff"><i class="material-icons left">list</i>Inventory</a></li>
             <% if (isLoggedIn) { %>
                <li><a href="/profile"><i class="material-icons left">person</i> Hello, <%=user.name%></a> </li>
                <li><a href="/logout" class="btn red">Logout</a></li>                        
            <% } else { %>
                <li><a href="/login" class="btn blue">Login</a></li>
            <% } %>
        </ul>
    </header>
    <!-- Actual page content! -->
    <div class="container">
        <div>
            <% if(!locals.type) {%>
                <a class="btn-small waves-effect waves-light" href="/">
                    <i class="material-icons right"></i>
                    Back to Welcome Page
                </a>
                
            <% } %>
            
            <% if(locals.type) {%>
                <a class="btn-small waves-effect waves-light" href="/stuff">
                    <i class="material-icons right"></i>
                    Back
                </a>
                
            <% } %>

            <!--
            <h2>
                Budget 
                <% if(locals.type) {%>
                (<%=locals.type%>)
                <% } %>
                
            </h2>
            <table>
                <tr>
                    <th>Total</th>
                    <td>$400</td>
                </tr>
                <tr>
                    <th>Spent</th>
                    <td>$104.10</td>
                </tr>
                <tr>
                    <th>Remaining</th>
                    <td>$395.90</td>
                </tr>
            </table>
            
            <div class="progress">
                <div class="determinate" style="width: 90%"></div>
            </div>
            -->
        </div>
        <div class="section" id="stuffList">
            <h2>Expenses</h2>
            <% if(locals.type) {%>
                <h3 id="typeHeader"><%= type %></h3>
            <% } %>

            <table class="striped" class="responsive-table">
                <thead>

                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Type</th>
                        <th></th>
                    </tr>

                </thead>

                
                <tbody>
                    <% for (let i = 0; i < inventory.length; i++) { %>
                        <tr>
                            <td><%= inventory[i].item %></td>
                            <td>$<%= inventory[i].price %></td>
                            <td><a href=<%= "/stuff/types/" + inventory[i].type %> class="typeBtn"><%= inventory[i].type %></a></td>
                            <td>
                                <a class="btn-small waves-effect waves-light" href=<%= "/stuff/item/" + inventory[i].id %> ><i
                                        class="material-icons right">edit</i>Edit Info</a>
                                <a class="btn-small waves-effect waves-light red" href=<%= "/stuff/item/" + inventory[i].id + "/delete" %>>
                                    <i class="material-icons">delete</i>
                    
                                </a>
                                
                            </td>
                        </tr>
                        <% } %>
                </tbody>


                
                
            
            </table>
        </div>

        <div class="section" id="stuffAdd">
            <h3>Add Expense</h3>
            <form method="post" action="/stuff">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="nameInput">Item Name</label>
                        <input type="text" name="name" id="nameInput" class="validate" data-length="32" required>
                    </div>
                    <div class="input-field col s2">
                        <label for="priceInput">Price</label>
                        <input type="number" name="price" id="priceInput" value=1.00 required>
                    </div>
                    <div class="input-field col s4">
                        <label for="typeInput">Type</label>
                        <input type="text" name="type" id="typeInput">
                    </div>

                </div>
                <button class="btn waves-effect waves-light" type="submit">
                    Submit
                </button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script src="/scripts/m.autoinit.js"></script>

</body>

</html>